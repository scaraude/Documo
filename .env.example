# Environment variables for Documo
# Copy this file to .env.local and fill in your actual values

# Database - Development database (port 5432)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/documo_db"

# Database - Test database (port 5433, managed by docker-compose.test.yaml)
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5433/documo_test"

# Node Environment
NODE_ENV="development"

# Email Configuration
FROM_EMAIL="noreply@documo.fr"
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxx"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxxxxxxxxxxxxxxxxx"

# Vercel OIDC Token (auto-generated by Vercel CLI, optional for local dev)
# VERCEL_OIDC_TOKEN="auto-generated-by-vercel"

# Disable Next.js telemetry (optional)
# NEXT_TELEMETRY_DISABLED=1