{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/hooks/*": ["./hooks/*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/*": ["./*"],
      "@/shared/*": ["./shared/*"],
      "@/features/*": ["./features/*"]
    },
    "allowJs": true,
    "types": ["node", "@testing-library/jest-dom/vitest"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib/prisma/generated",
    "prisma/seed.ts",
    "prisma/seed-test.ts"
  ]
}
